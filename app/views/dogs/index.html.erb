<p id="notice"><%= notice %></p>

<%= form_with url: dogs_path, method: "get", local: true do |form| %>
  <%= form.label :search %>
  <%= form.text_field :search, value: @search %>

  <%= form.label :sort %>
  <%= form.select(:sort, [["A-Z", "asc"], ["Z-A", "desc"]]) %>

  <%= form.submit "Search" %>
<% end %>

<% for i in 1..@pages %>
  <%= link_to "Page #{i}", dogs_path + "?page=#{i}"%>
<% end %>

<h1>Dogs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.name %></td>
        <td><%= dog.age %></td>
        <td><%= link_to 'Show', dog %></td>
        <td><%= link_to 'Edit', edit_dog_path(dog) %></td>
        <td><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dog', new_dog_path %>
